html
  head
    css:
      .body {
        font-family: arial, sans-serif;
        background-color: #EAEFF2;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 50px;
        height: 100%;
      }

      .content {
        max-width: 600px;
      }

      .greetings {
        font-size: 32px;
        font-weight: light;
        margin: 30px;
        line-height: 1.3;
      }
      
      .bold {
        font-weight: bold !important;
      }

      .details {
        background-color: white;
        padding: 50px;
      }

      .action-detail {
        border-top: solid 1px lightgrey;
        padding: 20px;
        font-size: 16px;
      }

      .button {
        all:unset;
        height: 62px;
        padding: 10px 20px;
        justify-content: center;
        align-items: center;
        background-color: #155E75;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        margin-top: 20px;
      }

  body
    div.body
      div.content
        div.greetings
          div
            span Hi
            span.bold = " #{@user.name},"
          span = I18n.t("mailer.deal.#{@deal.status}")
        div.details
          = render 'layouts/svgs/email_icon'
          - if @deal.reopened?
            p = @deal.audits.last.comment
          p.action-detail = I18n.t("mailer.deal.access")
          a.button href="#{ENV.fetch('FRONTEND_URL')}/deal/#{@deal.token}" target="_blank" View Deal
